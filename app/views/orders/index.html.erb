<section id="all-order" class="section">


  <div class="container">
    <%= link_to "New Ice Cream Order", new_order_path, class: "button is-secondary" %>
    <div class="columns">
      <% @all_orders.each do |order| %>
      <div class="column">
        <p class="notification is-info">
          ID: <%= order.transaction_id %><br>
          Created: <%= order.created_at %><br>
          Flavor: <%= order.flavor.name %><br>
          Price: <%= order.flavor.price %><br>
          <%= link_to "Edit Order", edit_order_path(order), class: "button is-primary" %>
          <%= form_for order, method: :delete do |f| %>
            <%= f.submit 'Delete Order', class: 'button is-secondary' %>
          <% end %>
        </p>
      </div>
      <% end %>
    </div>
  </div>
</section>
