            <button type="submit" class="searchButton">
              <i class="fa fa-search"></i>
           </button>
         </form>
         </div>
      </div>


    </div>
</section>
<%= notice %></p>
<%= alert %></p>

<div class="container">

<div class="column"><%= @title%></div>

  <div class="columns">
  <% @suppliers.each do |supplier|  %>
<a href="/suppliers/<%= supplier.id %>" class="column is-centered is-one-third is-multiline">
  <div id="<%= supplier.id %>">
    <p class="notification is-info">
      <code class="html"><%= supplier.name %></code>
    </p>
  </div>
</a>
<% end  %>
