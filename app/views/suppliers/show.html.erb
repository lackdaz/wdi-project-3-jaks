<section class="hero is-medium is-primary is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        <%= @supplier.name %>
      </h1>
      <h2 class="subtitle">
        <%= @supplier.address %>
      </h2>
    </div>
  </div>
  <% if  supplier_signed_in? && current_supplier.id == @supplier.id%>

  <div class="tabs is-centered">
<ul>
  <li class="is-active"><a href="/suppliers/<%= @supplier.id %>">Menu</a></li>
  <li><%= link_to "+IceCream", new_flavour_path, class: "navbar-link" %></li>
    <li><%= link_to "+Addons", new_container_path, class: "navbar-link" %></li>
  <li><%= link_to "Edit Store Profile", edit_supplier_registration_path, class: "navbar-link" %></li>
</ul>
</div>
<% end %>
</section>

<div class="column">
  <% if user_signed_in? %>
  <div class="columns is-multiline is-mobile is-centered">
    <div class="column is-three-quarters">
      <p class="notification is-info">
          <%= link_to "+IceCream", "#", class: "btn btn-primary" %>
      </p>
    </div>
  </div>
  <% end %>
<%  @flavours.each do |flavour| %>
<div class="columns is-multiline is-mobile is-centered">
  <div class="column is-three-quarters">
    <p class="notification is-info">
      <code class="html"><%= flavour.name %></code>
      <code class="html"><%= flavour.price %></code>
      <code class="html"><%= flavour.image %></code>
      <% if current_supplier == @supplier.id %>
      <span><%= link_to "Delete", "/flavours/#{flavour.id}", class: "navbar-link", method: :delete %></span>
      <% end  %>
      <% if user_signed_in? %>
        <%= link_to "+Flavour", "#", class: "btn btn-primary" %>
      <% end %>
    </p>
  </div>
</div>
<% end %>
</div>
